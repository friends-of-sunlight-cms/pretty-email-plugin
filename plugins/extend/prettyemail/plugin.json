{
  "$schema": "../../../system/schema/extend.json",
  "name": "Pretty Email",
  "description": "Nice HTML email format, replaces plain text emails.",
  "version": "0.9.2",
  "environment": {
    "system": "^8.0"
  },
  "dependencies": {
    "fosc-lib": ">=0.9.2"
  },
  "authors": [
    {"name": "Friends of Sunlight CMS", "url": "https://github.com/friends-of-sunlight-cms/"}
  ],
  "class": "PrettyEmailPlugin",
  "config_defaults": {
    "template": "default",
    "use_logo": false,
    "logo": "",
    "footer": ""
  },
  "actions": {
    "config": "ConfigAction"
  },
  "langs": {
    "prettyemail": "lang"
  },
  "events": [
    {"event": "mail.send", "method": "onSend", "priority": 999}
  ],
  "events.web": [],
  "events.admin": []
}
